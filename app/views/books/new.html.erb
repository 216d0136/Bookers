<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
<h1>Books</h1>
<h2> New book</h2>
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>
<%= end %>

